<%= form_for(@mybook) do |f| %>
  <% if @mybook.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@mybook.errors.count, "error") %> prohibited this mybook from being saved:</h2>

      <ul>
      <% @mybook.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :when %><br />
    <%= f.date_select :when %>
  </div>
  <div class="field">
    <%= f.label :wish %><br />
    <%= f.text_area :wish %>
  </div>
  <div class="actions">
    <%= f.hidden_field :intime, :value => "test" %>
    <%= f.submit %>
  </div>
<% end %>
